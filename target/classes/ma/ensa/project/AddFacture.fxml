<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.ensa.project.controller.AddFactureController" prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox spacing="15.0" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label text="Ajouter une nouvelle Facture" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <TextField fx:id="dateField" promptText="Date de la facture" />
                <TextField fx:id="statusField" promptText="Statut" />
                <TextField fx:id="taxField" promptText="Taxe (%)" />
                <TextField fx:id="montantField" promptText="Montant (MAD)" />

                <Button text="Enregistrer" onAction="#handleSaveFacture"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button text="Annuler" onAction="#handleCancel"
                        style="-fx-background-color: #F44336; -fx-text-fill: white;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
